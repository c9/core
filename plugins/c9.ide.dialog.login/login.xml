<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "window"
      center    = "true"
      height    = "188"
      minwidth  = "300"
      icon      = ""
      buttons   = "close"
      skin      = "bk-window2"
      kbclose   = "true"
      resizable = "false"
      title     = "Please Sign In"
      width     = "300"
      class     = "login dark"
      draggable = "true">
        <a:vbox
          anchors   = "10 20 0 10"
          padding   = "5">
            <div>
              <a:label id="lblExplanation">Log in</a:label>
            </div>
            <div>
              <a:hbox
                id        = "boxUser"
                align     = "center"
                padding   = "5">
                  <a:label class="lblUsername" width="70">User name:</a:label>
                  <a:textbox
                    id           = "txtUsername"
                    flex         = "7"
                    class        = "ace_searchbox tb_textbox searchbox searchTxt tb_console"
                    focusselect  = "true" />
              </a:hbox>
            </div>
            <div>
              <a:hbox
                id        = "boxPassword"
                align     = "center"
                padding   = "5">
                  <a:label class="lblPassword" width="70">Password:</a:label>
                  <a:secret
                    id           = "txtPassword"
                    flex         = "7"
                    class        = "ace_searchbox tb_textbox searchbox searchTxt tb_console"
                    focusselect  = "true" />
              </a:hbox>
            </div>
            
            <a:hbox edge="23 0 10" pack="end" padding="8">
                <a:button
                  id       = "btnCancel"
                  skin     = "btn-default-css3"
                  caption  = "Cancel"
                />
                <a:button
                  id      = "btnChoose"
                  class   = "btn-green"
                  caption = "OK"
                  skin    = "btn-default-css3"
                />
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>